{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@api/*": ["api/*"],
      "@services/*": ["common/services/*"],
      "@settings/*": ["common/settings/*"],
      "@styles/*": ["common/styles/*"],
      "@components/*": ["components/*"],
      "@data/*": ["data/*"],
      "@posts/*": ["data/posts/*"],
      "@hooks/*": ["hooks/*"],
      "@types": ["types"]
    },
    "typeRoots": ["@types", "./node_modules/@types"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./typings-custom/**/*.ts"],
  "exclude": [
    "node_modules",
    "./components/common/Markdown/Markdown.tsx",
    "common/settings/images.settings.js"
  ]
}
